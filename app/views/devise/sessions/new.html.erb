

<div class="background pt-0">
  <div class="container">
  <div class="row">
  <div class="col-12 filling"></div>
  </div>

    <div class="row justify-content-evenly align-items-center">
      <div class="col-12 col-md-6 col-xl-6">
        <div class="row">
          <div class="col-12">
           <%= image_tag "blueGlobeLogo2", id:"regi-logo" %>
          </div>
          <div class="col-12">
          <h2 class="text-center">This app is for you!</h2>
          </div>
        </div>
      </div>


      <div class="col-12 col-md-6 col-xl-3">
      <h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
  data: {turbo: false}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
      </div>
    </div>
     <div class="row">
  <div class="col-12 filling"></div>
  </div>
</div>
